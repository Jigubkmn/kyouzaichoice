<div class="border-b-2 border-gray p-10px lg:p-20px">
  <%= form_with model: @material_evaluation, url: material_material_evaluations_path(@material), local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.hidden_field :source_view, value: 'show' %>
      <!-- 教材評価 -->
      <div class= "mb-20px flex flex-col">
        <%= f.label :evaluation, class: "font-bold" %>
        <%= f.select :evaluation, options_for_select((0..10).map { |i| [sprintf('%.1f', i * 0.5), sprintf('%.1f', i * 0.5)] }, f.object.evaluation),
        {include_blank: true},class: "select select-warning select-sm w-full m-0 py-0 pr-0 pl-4", style: "width:200px;" %>
      </div>
      
      <!-- 教材評価コメント -->
      <div class= "mb-20px flex flex-col lg:max-w-800px sm:w-full sm:mx-0">
        <%= f.label :body, class: "font-bold" %>
        <%= f.text_area :body, class: "input input-bordered input-warning input-sm m-0 py-0 pr-0 pl-4", style: "height:auto;", rows: 3 %>
      </div> 
    <!-- ボタン -->
    <div class="flex justify-end">
      <div class="bg-thin-gray hover:bg-pale-gray rounded-md mr-10px sm:mr-30px w-150px", style= "height:38px;">
        <%= link_to t('helpers.submit.cancel'), materials_path, class: "flex items-center justify-center w-full h-full text-20px text-white font-bold" %>
      </div>
      <%= f.submit "教材評価を投稿", class: "bg-pale-blue hover:bg-dark-blue w-150px sm:w-200px text-20px text-white font-bold rounded-md", style: "height:38px;" %>
    </div>
  <% end %>
</div>