<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center w-full max-w-1090px mx-auto">
  <%= render 'profiles/index' %>
  <!-- いいねした教材 -->
  <div class="flex flex-col justify-center">
    <div class="flex flex-col sm:flex-row items-center justify-center sm:mb-10px">
      <h2 class="text-30px font-bold mb-5px sm:mr-30px"><%= t('.title') %></h2>
      <!-- 教材を登録ボタン -->
      <div class="bg-pale-blue hover:bg-dark-blue rounded-md mb-10px sm:m-0", style= "width:200px; height:38px;">
        <%= link_to t('.material_addition'), search_materials_path, class: "flex items-center justify-center w-full h-full text-20px text-white font-bold" %>
      </div>
    </div>
    <!-- いいねした教材を表示 -->
    <% if @materials.present? %>
      <div class="flex flex-wrap gap-4 justify-center">
        <%= render 'material' %>
      </div>
    <% else %>
      <div class="text-center">
        <p>いいねした教材がありません</p>
        <p>下記より教材一覧画面に移動して教材を「いいね」して下さい</p>
        <%= link_to t('.material_index'), materials_path, class: "text-18px text-darkest-blue underline underline-offset-4" %>
      </div>
    <% end %>
  </div>
</div>
<%= paginate @materials %>