<% @qualifications.each do |qualification| %>
  <div class="relative flex flex-col border-2 border-gray rounded-md w-350px p-10px">
    <div class="flex flex-row justify-center items-center mb-5px">
      <div class="flex-1 text-20px font-bold text-center"><%= qualification.name %></div>
      <!-- 編集・削除アイコン -->
      <div class="absolute right-3 top-3 flex flex-col">
        <!-- 編集アイコン -->
        <%= link_to edit_qualification_path(qualification), class: 'flex justify-center items-center bg-thin-orange hover:bg-dark-orange h-7 w-7 rounded-full' do %>
          <i class="fa-sharp fa-solid fa-pencil fa-lg"></i>
        <% end %>
        <!-- 削除アイコン -->
        <%= link_to qualification_path(qualification), class: 'flex justify-center items-center bg-pale-pink hover:bg-dark-pink h-7 w-7 rounded-full mt-10px', data: { turbo_method: :delete } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>
    <div class="flex flex-row justify-center">
      <p>進捗状況：</p>
      <%= qualification.progress %>
    </div>
    <% if qualification.year_acquired.present? %>
      <div class="flex flex-row justify-center">
        <p>取得年数：</p>
        <%= qualification.year_acquired %>
        <p>年</p>
      </div>
    <% end %>
  </div>
<% end %>