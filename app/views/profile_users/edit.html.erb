<% content_for(:title, t('.title')) %>
<div class="flex flex-row w-full">
  <%= render 'profile/side_bar' %>
  <div class="flex flex-col">
    <h3 class="mt-30px text-28px font-bold"><%= t('.title') %></h3>
    <div class="mt-5px border-2 border-gray rounded-md p-30px" style="width: 600px;" >
      <%= form_with model: @user, url: profile_user_path, method: :put do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class= "mb-20px flex flex-col" >
          <%= f.label :name, class: "font-bold" %>
          <%= f.text_field :name, class: "input input-bordered input-warning input-sm m-0 py-0 pr-0 pl-4" %>
        </div>
        <div class= "mb-20px flex flex-col" >
          <%= f.label :email, class: "font-bold" %>
          <%= f.email_field :email, class: "input input-bordered input-warning input-sm w-full m-0 py-0 pr-0 pl-4" %>
        </div>
        <div class= "mb-20px flex flex-col" >
          <%= f.label :introduction, class: "font-bold" %>
          <%= f.text_area :introduction, class: "input input-bordered input-warning input-sm w-full m-0 py-0 pr-0 pl-4", style: "height:auto;", rows: 5 %>
        </div>
        <div class= "mb-20px flex flex-col">
          <%= f.label :image, class: "font-bold" %>
          <%= f.file_field :image, class: "file-input file-input-bordered file-input-warning file-input-sm w-full max-w-xs", accept: 'image/*' %>
          <%= f.hidden_field :image_cache %>
        </div>
        <div class="flex justify-end">
          <div class="flex justify-center item-center mr-30px">
            <%= link_to t('helpers.submit.cancel'), profile_user_path, class: "btn bg-thin-gray hover:bg-pale-gray w-full text-xl text-white", style: "width:150px;" %>
          </div> 
          <%= f.submit t('helpers.submit.update'), class: "btn bg-pale-blue hover:bg-dark-blue w-full text-xl text-white", style: "width:150px;" %>
        </div>
      <% end %>
    </div>  
  </div>
</div>