<% content_for(:title, t('.title')) %>
<div class="flex justify-center">
  <div class="w-full max-w-450px mb-50px">
    <h2 class="text-30px my-30px text-center font-bold"><%= t('.title') %></h2>
    <%= form_with model: @user, url: login_path, local: true do |f| %>
      <div class= "mb-20px flex flex-col w-5/6 sm:w-full mx-auto">
        <%= f.label :email, class: "font-bold" %>
        <%= f.email_field :email, class: "input input-bordered input-warning input-sm w-full m-0 py-0 pr-0 pl-4" %>
      </div>
      <div class= "mb-10px flex flex-col w-5/6 sm:w-full mx-auto">
        <%= f.label :password, class: "font-bold" %>
        <%= f.password_field :password, class: "input input-bordered input-warning input-sm w-full m-0 py-0 pr-0 pl-4" %>
      </div>
      <div class="flex justify-center mb-10px">
        <%= link_to t('.to_register_page'), new_user_path, class: "text-18px text-dark-green underline underline-offset-4 hover:text-dark-gray" %>
      </div>
      <div class="flex justify-center mb-30px">
        <%= link_to t('.password_forget'), new_password_reset_path, class: "text-18px underline underline-offset-4 hover:text-dark-gray" %>
      </div>
      <div class="flex justify-center w-5/6 sm:w-full mx-auto">
        <%= f.submit t('helpers.submit.login'), class: "bg-pale-blue hover:bg-dark-blue w-full text-20px text-white font-bold rounded-md", style: "height:38px;" %>
      </div>
    <% end %>
    <div class="flex justify-center items-center w-5/6 sm:w-full mx-auto text-14px py-3 text-gray-400 uppercase before:flex-1 before:border-t before:border-gray-200 before:me-6 after:flex-1 after:border-t after:border-gray-200 after:ms-6 dark:text-neutral-500 dark:before:border-neutral-600 dark:after:border-neutral-600">Or</div> 
    <!-- ゲストログイン -->
    <div class="flex flex-col mb-20px w-5/6 sm:w-full mx-auto">
      <p class="text-center mb-5px">ゲストユーザーとしてログインする</p>
      <%= button_to 'ゲストログイン', guest_login_path, class: "bg-thin-orange hover:bg-pale-orange w-full text-20px text-white font-bold rounded-md", style: "height:38px" %>
    </div>
    <!-- Google認証 -->
    <div class="w-5/6 sm:w-full mx-auto">
      <%= link_to auth_at_provider_path(provider: :google), class: "w-full py-2 px-4 inline-flex justify-center items-center gap-x-2 text-14px font-medium rounded-lg border bg-white shadow-sm hover:bg-ultra-thin-gray disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-800" do %>
        <svg class="w-4 h-auto" width="47" height="47" viewBox="0 0 46 47" fill="none">
          <path d="M46 24.0287C46 22.09 45.8533 20.68 45.5013 19.2112H23.4694V27.9356H36.4069C36.1429 30.1094 34.7347 33.37 31.5957 35.5731L31.5663 35.8669L38.5191 41.2719L38.9885 41.3306C43.4477 37.2181 46 31.1669 46 24.0287Z" fill="#4285F4"/>
          <path d="M23.4694 47C29.8061 47 35.1161 44.9144 39.0179 41.3012L31.625 35.5437C29.6301 36.9244 26.9898 37.8937 23.4987 37.8937C17.2793 37.8937 12.0281 33.7812 10.1505 28.1412L9.88649 28.1706L2.61097 33.7812L2.52296 34.0456C6.36608 41.7125 14.287 47 23.4694 47Z" fill="#34A853"/>
          <path d="M10.1212 28.1413C9.62245 26.6725 9.32908 25.1156 9.32908 23.5C9.32908 21.8844 9.62245 20.3275 10.0918 18.8588V18.5356L2.75765 12.8369L2.52296 12.9544C0.909439 16.1269 0 19.7106 0 23.5C0 27.2894 0.909439 30.8731 2.49362 34.0456L10.1212 28.1413Z" fill="#FBBC05"/>
          <path d="M23.4694 9.07688C27.8699 9.07688 30.8622 10.9863 32.5344 12.5725L39.1645 6.11C35.0867 2.32063 29.8061 0 23.4694 0C14.287 0 6.36607 5.2875 2.49362 12.9544L10.0918 18.8588C11.9987 13.1894 17.25 9.07688 23.4694 9.07688Z" fill="#EB4335"/>
        </svg>
        Googleでログインする
      <% end %>
    </div>
    
  </div>
</div>
